<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="{{ VendorName }}_{{ ModuleName }}::{{ ModelName }}" title="{{ ModuleName }}" translate="title" sortOrder="900">
                        <resource id="{{ VendorName }}_{{ ModuleName }}::{{ ModelName }}s" title="{{ ModuleName }}s" translate="title">
                            <resource id="{{ VendorName }}_{{ ModuleName }}::{{ ModelName }}_save" title="Save" translate="title"/>
                            <resource id="{{ VendorName }}_{{ ModuleName }}::{{ ModelName }}_delete" title="Delete" translate="title"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
